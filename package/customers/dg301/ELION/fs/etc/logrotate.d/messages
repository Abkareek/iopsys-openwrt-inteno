/log/messages /log/dns_debug /log/upnp_debug {
        rotate 5
        size 512k
        postrotate
        /usr/bin/killall -HUP syslog-ng
        endscript
}
/var/log/asterisk/messages {
        rotate 5
        size 512k
        create
        postrotate
        /usr/sbin/asterisk -rx 'logger reload' > /dev/null 2> /dev/null
        endscript
}
