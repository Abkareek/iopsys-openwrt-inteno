config defaults
	option syn_flood	1
	option input		ACCEPT
	option output		ACCEPT
	option forward		REJECT

config zone
	option name		lan
	list   network		'lan'
	#list   network		'Servicelan'
	option input		ACCEPT
	option output		ACCEPT
	option forward		ACCEPT

config zone
	option name             guest
	option network          'guest'
	option input            ACCEPT
	option output           ACCEPT
	option forward          ACCEPT

config zone
	option name		wan
	list   network		'internet'
	list   network		'internet6'
	list   network		'mobile'
	option input		REJECT
	option output		ACCEPT
	option forward		REJECT
	option masq		1
	option mtu_fix		1

config zone
	option name		nutiTV
	list   network		'NutiTV'
	option input		ACCEPT
	option output		ACCEPT
	option forward		ACCEPT
	option masq		1
	option mtu_fix		1
	option conntrack	1

config forwarding
	option src		lan
	option dest		wan

config forwarding
	option src		lan
	option dest		nutiTV

config forwarding
	option src              guest
	option dest             wan

config rule
	option target 'ACCEPT'
	option src 'wan'
	option dest 'lan'
	option name 'IPv6-wan-2-lan'
	option family 'ipv6'
	option proto 'all'
	option enabled '0'

config dmz dmz
	option exclude_ports '20022 20080 51005'

config include
	option path /etc/firewall.user
	option reload 1

config include
        option path /etc/firewall.sip
        option reload 1

config include
	option path /etc/firewall.dmz
	option reload 1

