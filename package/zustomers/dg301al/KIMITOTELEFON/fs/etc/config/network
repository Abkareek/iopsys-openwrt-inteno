
config interface 'loopback'
	option is_lan '1'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'lan'
	option is_lan '1'
	option type 'bridge'
	option proto 'static'
	option ipaddr '192.168.1.1'
	option netmask '255.255.255.0'
	option ifname 'eth4 eth3'
	option bridge_instance '1'

config interface 'Internet'
	option type 'bridge'
	option proto 'dhcp'
	option ifname 'atm0.1 eth0.1 ptm0.713'

config interface 'VoIP'
	option type 'bridge'
	option proto 'none'
	option ifname 'atm1.1 eth1 ptm0.863'

config interface 'IPTV'
	option type 'bridge'
	option proto 'none'
	option ifname 'atm2.1 eth2 ptm0.2708'

