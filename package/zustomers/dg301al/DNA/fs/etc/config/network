config interface 'loopback'
        option is_lan '1'
        option ifname 'lo'
        option proto 'static'
        option ipaddr '127.0.0.1'
        option netmask '255.0.0.0'

config interface 'wan'
        option proto 'dhcp'
        option type 'bridge'
        option ifname 'atm0.1 atm1.1 eth0 eth1 eth2 eth3 eth4 ptm0.1'
        option hostname 'DNA-WELHO-$MAC4'
        option bridge_instance '1'

config interface 'Local'
        option type 'alias'
        option proto 'static'
        option ifname 'br-wan'
        option ipaddr '192.168.1.1'
        option netmask '255.255.255.0'
