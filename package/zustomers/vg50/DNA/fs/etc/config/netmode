config mode 'setup'
        option dir '/etc/netmodes'
        option detail 'To change network configuration to preconfigured please select configuration mode from dropdown menu and press button'
        option curmode 'routed'

config netmode 'routed'
        option desc 'Routed'
        option conf 'config_routed'
        option exp 'Default routed configuration with IPv6 and IPv4'

config netmode 'ipv4routed'
        option desc 'Routed (IPv4 only)'
        option conf 'config_routedipv4'
        option exp 'Routed configuration with IPv4 only'

config netmode 'bridged'
        option desc 'Bridged'
        option conf 'config_bridged'
        option exp 'Bridged mode changes your modem to bridged'

config netmode '3g'
        option desc 'Routed (3G backup, IPv4 only)'
        option conf 'config_3g'
        option exp 'Routed+3G changes your modem to use 3G connection as backup WAN. Please check your 3G dongle meets DNA requirements like model, apn and PIN'

config netmode '4g'
        option desc 'Routed (4G backup, IPv4 only)'
        option conf 'config_4g'
        option exp 'Routed+4G changes your modem to use 4G(LTE) connection as backup WAN. Please check your 4G(LTE) dongle meets DNA requirements like model, apn and PIN'

config netmode 'hybrid1'
        option desc 'Hybrid (GBE bridge, LAN1-3 + WLAN routed)'
        option conf 'config_hybrid1'
        option exp 'This configuration bridges the GBE port'

config netmode 'hybrid2'
        option desc 'Hybrid (GBE bridge, LAN1-3 routed, WLAN disabled)'
        option conf 'config_hybrid2'
        option exp 'This configuration bridges the GBE port and turns WLAN off'

