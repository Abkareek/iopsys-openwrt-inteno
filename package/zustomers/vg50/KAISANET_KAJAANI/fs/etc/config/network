
config interface 'loopback'
	option is_lan '1'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'lan'
	option is_lan '1'
	option type 'bridge'
	option proto 'static'
	option ipaddr '192.168.1.1'
	option netmask '255.255.255.0'
	option ip6assign '60'
	option bridge_instance '1'
	option ifname 'eth0 eth1 eth2'

config interface 'vdslethinternet'
	option type 'anywan'
	option proto 'dhcp'
	option ifname 'eth3.1 ptm0.1'

config interface 'adslinternet'
	option proto 'pppoe'
	option ifname 'atm0.1'
	option service 'Kaisanet'

config interface 'iptv'
	option type 'bridge'
	option proto 'none'
	option bridge_instance '2'
	option ifname 'atm0.3750 eth3.3750 eth4 ptm0.3750'

